
<!-- This is a .ejs layout I created(header) in views folder  -->

<%- include("header") -%>
<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% for(var i = 0; i < newListItems.length; i++) { %>
    <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" value = "<%= newListItems[i]._id %>"name="checkbox" onChange="this.form.submit()">
        <p> <%= newListItems[i].name %> </p>
      </div>
      <input type="hidden" name="listName" value= "<%= listTitle %>"></input>

    </form>
    <% } %>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="Write name of new item here" autocomplete="off">
      <button type="submit" name="list" value= "<%= listTitle %>" >+</button>
    </form>

  </div>


  <%- include("footer") -%>
